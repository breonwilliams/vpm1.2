{% extends "layouts/base.twig" %}

{% block content %}

	{# <div class="content-wrapper"> #}
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">

        <div class="article-header" style="background-image: url(' {{ post.thumbnail.src }} ')">
          <div class="container">

            <h1 class="article-h1">{{post.title}}</h1>

            <p class="blog-date">
             <span>Posted:</span> {{ post.post_date|date}}
            </p>

            {# Hide the author if it's "Admin" #}
            {% if post.author.slug != "admin" %}
              <p class="blog-author">
                <a href="{{ function('get_permalink', team_member_id) }}"> {{ post.author.display_name }} </a>
                <span class="blog-author-title">{{ team_member_work_title }}</span>
              </p>
            {% endif %}

          </div>
        </div>

        <div class="container">

          <div class="article-body">
            {{post.content}}
          </div>

        </div>
      </section>

    {# Comments - hidden for now #}
		{# {% if post.comment_status != 'closed' %}
			<section class="comments">
				<div class="respond">
					<h3 class="h2">Comments</h3>
					{{ comment_form }}
				</div>
				<div class="responses">
					{% for cmt in post.get_comments() %}
						{% include "comment.twig" with {comment:cmt} %}
					{% endfor %}
				</div>

			</section>
    {% endif %} #}

		</article>
	{# </div> <!-- /content-wrapper --> #}

{% endblock %}
